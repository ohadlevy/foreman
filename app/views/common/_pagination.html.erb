<div class="form-group">
  <%= select_tag('per_page', options_for_select(per_page_options), label: _('per page'), onChange: "tfm.tools.changePerPageNumber()", class: "pagination-pf-pagesize without_select2") %>
  <span><%= _('per page') %></span>
</div>

<div class="form-group">
  <span>
    <span class='pagination-pf-items-current'>
      <%= collection.offset + 1 %>-<%= collection.offset + collection.length %>
    </span>
    <%= _('of') %>
    <span class='pagination-pf-items-total'>
      <%= collection.total_entries %>
    </span>
  </span>
  <%= will_paginate(collection, options) %>
</div>
